/**index.wxss**/

.container{
  width: 100%;height: auto;
  background: #1E82C5;
  overflow: hidden;
}
.wea-state{
  width: 100%;
  height: 40rpx;
  margin-top: 60rpx;
  color: #fff;
  padding-left: 30rpx;
}
/************** 温度开始 ********/
.wendu{
  width: 100%;
  height: 262rpx;
  position: relative;
  padding: 0 20rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.wendu-bg{
  width: 100%;
  height: 180rpx;
  position: absolute;
  left: 0;
  bottom:0;
  border-bottom: 1px solid #A4C1DD;
}
.wendu-left{
  width: 450rpx;
  height: 100%;
  float: left;
  position: relative;
  z-index: 10;
}
.wendu-left .wendu-num{
  font-size: 70px;
  color:#fff;
  font-family: "Arial";
  /*font-weight: bold;*/
}
.wendu-left .wendu-info{
  color: #fff;
  margin-top: 4rpx;
  font-size: 24rpx;
}
.wendu-left .text{
  color: #fff;
  font-size: 24rpx;
  margin-top: 8rpx;
}
.wendu-right{
  height: 100%;
  overflow: hidden;
  position: relative;
  z-index: 10;
}
.wendu-right .r-img{
    width: 51rpx;
    height: 51rpx;
    vertical-align: middle;
    position: absolute;
    left: 98rpx;
    z-index: 20;
    background-color: #D7AF0E;
    background-image: url("../../images/shuye.png");
    background-repeat: no-repeat;
    background-size: 34rpx 34rpx;
    background-position: center center;
    border-radius: 53rpx;
     bottom: 37rpx;
}
/*.wendu-right .r-img image{
  width: 28rpx;
}*/
.wendu-right .zhiliang{
    float: right;
    width:153rpx;
    height: 42rpx;
    padding: 10rpx;
    /*margin: 1rem 0 0;*/
    border-radius: 2.1rem;
    background: rgba(0,0,0,.1);
    font-size: 24rpx;
    color: #fff;
    text-indent: 60rpx;
    line-height: 42rpx;
    position: absolute;
    right: 0;
    bottom: 30rpx;
    
}
/************** 温度结束 ********/
/*************** 今明天气预告开始 **********/
.yugao{
  width: 100%;
  height: 156rpx;
}
.yugao .yugao-left{
  width: 50%;
  height: 100%;
  float: left;
  box-sizing: border-box;
  padding:10px;
  border-right: 1px solid rgba(255,255,255,.2);
}
.yugao-left .today{
  width: 100%;
  height: 40rpx;
  color: #fff;
}
.yugao-left .today .td-l{
  font-size: 24rpx;
  float: left;
}
.yugao-left .today .td-m{
  float: left;
  font-size: 24rpx;
  width: 72rpx;
  height: 100%;
  text-align: center;
  line-height: 40rpx;
  border-radius: 14rpx;
  background: #D7AF0E;
  margin-left:20rpx;
}
.yugao-left .today .td-r{
  float: right;
  font-size: 24rpx;
}
.today-state{
  width: 100%;
  height: 60rpx;
  margin-top: 30rpx;
}
.today-state text{
  font-size: 24rpx;
  color: #fff;
  float: left;
  line-height: 60rpx;
}
.today-state image{
  width: 53rpx;
  height: 53rpx;
  float: right;
}

.yugao .yugao-right{
  height: 100%;
  border-right: 0;
  overflow: hidden;
}
/*************** 今明天气预告结束 **********/

/***************  日落开始 ***********/
.riluo{
  width: 100%;
  height: 58rpx;
  border-bottom: 1px solid #A4C1DD;
  background: rgba(255,255,255,.2);
  color: #fff;
  padding: 0 10px;
  box-sizing: border-box;
}
.riluo text{
  font-size: 24rpx;
  float: left;
  line-height: 58rpx;

}
.riluo .riluo-right{
  float: right;
  width: 128rpx;
  height: 100%;
  /*background: #fff;*/
}
.riluo .riluo-right text{
  float: left;
}
.riluo .riluo-right .btn{
  width: 36rpx;
  height: 36rpx;
  float: right;
  background: url("../../images/btn.png") no-repeat;
  background-size: 36rpx;
  margin-top: 11rpx;
}/***************  日落结束 ***********/

/* ***************** 活动开始 **************/
.active{
  width: 100%;
  height: auto;
}
.active .active-list{
  width: 33.33%;
  height: 240rpx;
  float: left;
  border: 1px solid rgba(255,255,255,.2);
  border-width: 0 1px 1px 0;
  box-sizing: border-box;

}
.active-list .active-icon{
  width: 82rpx;
  height: 74rpx;
  margin: 0 auto;
  display: block;
  margin-top: 60rpx;
}
.active-list .text{
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  margin-top: 20rpx;
}
/* ***************** 活动结束 **************/
/* **************一周天气预报开始 ************/
.weekweather{
  width: 100%;
  height: auto;
  padding: 32rpx 20rpx 0 20rpx;
  border-bottom: 1px solid rgba(255,255,255,.2);
  font-size: 24rpx;
  color: #fff;
}
.weekweather:after{
  content:'';
  display: block;
  clear: both;
}
.weekweather .weekday{
  float: left;
  width: 16.66%;
  height: auto;
  text-align: center;
}
.weekweather .weekday .day{
  line-height: 28rpx;
}
.weekweather .weekday .state{
  width: 100%;
  height: 66rpx;
  line-height: 66rpx;
}
.weekweather .weekday .img{
  width: 100%;
  height: 46rpx;
}
.weekweather .weekday .img image{
  width: 46rpx;
  height: 46rpx;
  /*margin: 0 auto;*/
}
.weekweather .weekday .table{
  width:100%;
  height: 246rpx;
  /*background: #fff;*/
}
.weekweather .weekday .wea-quality{
  width: 72rpx;
  height: 40rpx;
  margin: 0 auto;
  background: #D7AF0E;
  border-radius: 40rpx;
  line-height: 40rpx;
}
.weekweather .weekday .feng{
  padding: 20rpx 0 24rpx 0;
  width: 100%;
  height: 76rpx;
  text-align: center;
}
.weekweather .weekday .feng .fx{
   line-height: 38rpx;
}
.weekweather .weekday .feng .fl{
   line-height: 38rpx;
}
/************ 墨记开始 *********/
.moji{
  width: 94%;
  height: 360rpx;
  box-sizing: border-box;
  margin: 24rpx;
  padding:24rpx;
  background: rgba(255,255,255,.2);
  border-radius: 10rpx;
}
.moji .moji-tit{
  font-size: 32rpx;
  color: #fff;
  padding-top: 24rpx;
  margin-top: 24rpx;
  border-bottom: 1px solid #fff;
  padding-bottom: 8rpx;
}
.moji .list-box{
  width: 100%;
  height: 240rpx;
   padding: 12px 0;
}
.moji .list-box .list{
  width: 100%;
  height: 48rpx;
  font-size: 24rpx;
  color: #fff;
  line-height: 48rpx;
}